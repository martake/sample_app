<a href="<%= user_path(user) %>">
  <%= gravatar_for user, size: 52 %>
</a>
<h1>
  <%= user.name %>
</h1>
<span>
  @<%= user.key %>
</span>
<% unless hide_profile_link %>
<span>
  <%= link_to "view profile", user %>
</span>
<% end %>
<span>
  <%= pluralize(user.microposts.count, "micropost") %>
</span>
