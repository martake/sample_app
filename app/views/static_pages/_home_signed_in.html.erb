  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' , user: current_user, hide_profile_link: false %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>  
      <section>
        <%= link_to "RSS Feed", rss_url(:rss, rss_token: current_user.rss_token) %>
      </section>  
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
    </div>
  </div>
